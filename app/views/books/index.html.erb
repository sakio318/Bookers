<body>
    <h1>Books</h1>
    <% @books.each do |book| %>
    <table>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book.id) %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <tb><%= link_to 'Destroy', book_path(book.id), method: :delete, "date-confirm" =>"Are you sure?" %></tb>
        </tr>
    <% end %>


    </table>
    <h2>New Book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>本文</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
</body>