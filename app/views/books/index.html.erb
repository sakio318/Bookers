<body>
    <h1>Books</h1>
    <div class="table">
        <table>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
        <div class="booklist">
        <tr>
            <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book.id) %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm"=>"本当に削除いたしますか？" %></td>
        </tr>
        </div>
    <% end %>
    </table>
    </div>

    <h1>New Book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>本文</h4>
      <%= f.text_area :body %>
      <div class="CreateBook">
      <%= f.submit 'Create Book' %>
      </div>
    <% end %>
    <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <p>error</p>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
    <% end %>
</body>